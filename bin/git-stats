#!/bin/bash

LOG=true
CURR_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ ! $# -eq 0  ]
  then
    if [ $1 == "--do-not-log" ]
      then
        shift
        LOG=false
    fi

    if [ $1 == "--gen-html" ]
      then
        node $CURR_DIR/../gen.js
        exit 0
    fi
fi

git "$@"

if [ $LOG == true ]
  then
    $CURR_DIR/js "$PWD $@"
    #nohup $CURR_DIR/js "1 $@" > /dev/null 2>&1 &
fi
